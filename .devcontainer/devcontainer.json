{
  "name": "Rusty Moodboard Dev",
  "image": "mcr.microsoft.com/devcontainers/rust:latest",
  
  "postCreateCommand": "bash .devcontainer/scripts/1-install-system-deps.sh && bash .devcontainer/scripts/2-install-rust-tools.sh && bash .devcontainer/scripts/3-init-sveltekit.sh",
  
  "customizations": {
    "vscode": {
      "extensions": [
        "svelte.svelte-vscode",
        "rust-lang.rust-analyzer"
      ]
    }
  }
}
